{
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 0,
    "analysis": {
      "analyzer": {
        "autocomplete_analyzer": {
          "tokenizer": "autocomplete_tokenizer",
          "filter": ["lowercase"]
        }
      },
      "tokenizer": {
        "autocomplete_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 10,
          "token_chars": ["letter", "digit"]
        }
      }
    }
  },
   "mappings": {
    "properties": {
      "text": { "type": "text" },
      "user_id":{"type":"keyword"},
      "createdAt": { "type": "date" },
      "media": {
        "type": "nested",
        "properties": {
          "type": { "type": "keyword" },
          "url": { "type": "keyword" },
          "size": { "type": "integer" }
        }
      }
    }
  }
}
